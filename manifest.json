{
    "manifest_version": 3,
    "name": "Prior Authorization Autoupload",
    "version": "0.1",
    "description": "Auto dowload, rename, and upload faxed PA from covermymeds into emd.md",
    "permissions": [
        "tabs", 
        "cookies",
        "storage",
        "downloads",
        "scripting",
        "webRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "*://portal-services.covermymeds.com/*",
        "*://dashboard.covermymeds.com/*",
        "*://khasak.ema.md/ema/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16":  "icon.png",
        "48":  "icon.png",
        "128": "icon.png"
    }
}