{
    "manifest_version": 3,
    "name": "Prior Authorization Autoupload",
    "version": "1.2.1",
    "description": "Auto dowload, rename, and upload faxed PA from covermymeds into emd.md",
    "permissions": [
        "tabs", 
        "cookies",
        "storage",
        "identity",
        "downloads",
        "scripting",
        "webRequest",
        "webNavigation",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://portal-services.covermymeds.com/*",
        "*://*.covermymeds.com/*",
        "*://*.ema.md/*",
        "https://www.googleapis.com/*",
        "https://sheets.googleapis.com/*"
    ],
    "oauth2": {
        "client_id": "820508291637-buhkene7s9rm9ia28bm05iidctnjh1q9.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    },
    "background": {
        "service_worker": "dist/background.bundle.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16":  "icon.png",
        "48":  "icon.png",
        "128": "icon.png"
    }
}